    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: debug main",
            "type": "python",
            "request": "launch",
            "module": "telegram_messages_dump",
            "cwd": "${workspaceFolder}",
            "args": [
                "-c@<chat_name>",
                "-p<phone_number>",
                "-o<path_to_output_file>",
                "-e text",
                "-l 100"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}
